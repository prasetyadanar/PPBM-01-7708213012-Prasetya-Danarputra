<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transfer"
    android:orientation="vertical"
    android:background="#ededed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00BFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tansfer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/dortmund"
            android:drawableLeft="@drawable/baseline_near_me_24"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginVertical="100dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00BFFF"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_arrow_back_24"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bank"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:padding="12dp"
                    android:background="#e2e2e2"
                    android:textColorHint="#60000000"
                    android:inputType="number"
                    android:drawableLeft="@drawable/baseline_person_outline_24"
                    android:drawablePadding="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/No_rek"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="160dp"
                    android:padding="12dp"
                    android:background="#e2e2e2"
                    android:textColorHint="#60000000"
                    android:hint="No Rek"
                    android:inputType="number"
                    android:drawableLeft="@drawable/baseline_person_outline_24"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:layout_below="@id/No_rek"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="#e2e2e2"
                    android:textColorHint="#60000000"
                    android:hint="Name"
                    android:inputType="text"
                    android:drawableLeft="@drawable/baseline_person_outline_24"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nominal"
                    android:layout_below="@id/name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="#e2e2e2"
                    android:textColorHint="#60000000"
                    android:hint="Nominal"
                    android:inputType="number"
                    android:drawableLeft="@drawable/baseline_attach_money_24"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nominal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tulisan_nama"
                    android:text="From"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/from"
                    android:layout_below="@id/tulisan_nama"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:padding="12dp"
                    android:background="#e2e2e2"
                    android:textColorHint="#60000000"
                    android:text="921****"
                    android:drawableLeft="@drawable/baseline_person_outline_24"
                    android:drawablePadding="10dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/from"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1E90FF"
                    android:text="SEND"
                    app:cornerRadius="10dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</LinearLayout>